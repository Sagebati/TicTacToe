<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samblaise.tictactoe">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/icon2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.GameActivity" />
        <activity android:name=".activities.ListPlayersActivity"/>
        <activity android:name=".activities.WaitingForPlayerActivity"/>
        <service android:name=".activities.old.Service_ConnectToDB"/>
    </application>

</manifest>
