<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_button" parent="Widget.AppCompat.Button.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="game_button" parent="Widget.AppCompat.Button">
        <!--<item name="android:background">#edf2ee</item>-->
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="list_text">
        <item name="android:background">#64fdfbff</item>
        <item name="android:textColor">#222</item>
    </style>

</resources>
